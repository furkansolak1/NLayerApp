
@{
    ViewData["Title"] = "Save";
}
@model ProductDto
<h1>Save Product</h1>
<div class="row">
    <div class="col-md-6">
        <form asp-controller="Products" asp-action="Save" method="post">
            <div class="form-group">
                <label class="form-label" asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form-label" asp-for="Stock"></label>
                <input asp-for="Stock" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form-label" asp-for="Price"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label class="form-label" asp-for="CategoryId"></label>
                <select class="form-select" asp-for="CategoryId" asp-items="ViewBag.categories"></select>
                
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
        
</div>
